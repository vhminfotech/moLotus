<resources>

    <style name="TextPrimary">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="textSize">primary</item>
    </style>

    <style name="TextSecondary">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="textSize">secondary</item>
    </style>

    <style name="TextTertiary">
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="textSize">tertiary</item>
    </style>

    <style name="TextButton">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="textSize">secondary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>

        <!-- This needs to be set so that we can tint the toolbar and not change the background
         resource. This is mainly so that QkReplyActivity can call setClipToOutline -->
        <item name="android:background">@color/tools_theme</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ToolbarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="textSize">toolbar</item>
    </style>

    <style name="PreferenceCategory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">72dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textColor">theme</item>
        <item name="textSize">secondary</item>
    </style>

    <style name="CollapsingToolbarCollapsedText">
        <item name="textSize">toolbar</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsingToolbarExpandedText">
        <item name="android:textSize">44sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScheduledSampleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_rectangle_outline_22dp</item>
        <item name="android:backgroundTint">?android:attr/divider</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="textSize">primary</item>
    </style>

    <style name="DrawerRow">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="DrawerText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="textSize">secondary</item>
    </style>

    <style name="DrawerIcon">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/tools_theme</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="AppTheme.Teal" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryTeal</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTeal</item>
        <item name="colorAccent">@color/colorAccentTeal</item>
    </style>
    <style name="AppTheme.Cyan" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryCyan</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkCyan</item>
        <item name="colorAccent">@color/colorAccentCyan</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>

    <style name="menuStyle">
        <item name="android:layoutDirection">rtl</item>
    </style>
</resources>
