<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llGroupDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".feature.chat.ui.GroupDetailsActivity">

        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/tools_theme"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="7dp"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <LinearLayout
                android:id="@+id/llName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <com.sms.moLotus.common.widget.QkTextView
                    android:id="@+id/txtGroupName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:text="GroupName"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <com.sms.moLotus.common.widget.QkTextView
                    android:id="@+id/txtTyping"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingStart="10dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:alpha="0.1"
                android:scaleType="fitXY"
                android:src="@drawable/bg_chat" />

            <com.sms.moLotus.common.widget.QkTextView
                android:id="@+id/txtCreatedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/black" />
        </FrameLayout>

        <com.sms.moLotus.common.widget.QkTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:padding="10dp"
            android:text="Participants"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvParticipants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background_button"
            android:elevation="5dp"
            android:nestedScrollingEnabled="false"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <com.sms.moLotus.common.widget.QkTextView
            android:id="@+id/txtExitGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_button"
            android:drawableLeft="@drawable/ic_exit"
            android:drawablePadding="7dp"
            android:drawableTint="@color/colorThemeRed"
            android:elevation="10dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:padding="20dp"
            android:text="Exit Group"
            android:textColor="@color/colorThemeRed" />

    </LinearLayout>
</ScrollView>