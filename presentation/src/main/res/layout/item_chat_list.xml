<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemClick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="12dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/avatars"
        android:adjustViewBounds="true"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:layout_gravity="top"
        android:scaleType="fitXY"
        android:src="@drawable/ic_chat_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <com.sms.moLotus.common.widget.QkTextView
        android:id="@+id/txtUserName"
        style="@style/TextPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/txtLastMessage"
        app:layout_constraintEnd_toStartOf="@id/txtDate"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/avatars"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="@tools:sample/full_names" />

    <com.sms.moLotus.common.widget.QkTextView
        android:id="@+id/txtLastMessage"
        style="@style/TextSecondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/mute"
        app:layout_constraintStart_toStartOf="@id/txtUserName"
        app:layout_constraintTop_toBottomOf="@id/txtUserName"
        tools:text="@tools:sample/lorem/random" />

    <ImageView
        android:id="@+id/mute"
        android:layout_width="20dp"
        android:layout_height="16dp"
        android:layout_marginTop="2dp"
        android:paddingStart="4dp"
        android:visibility="gone"
        android:src="@drawable/ic_mute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtLastMessage"
        app:tint="?android:attr/textColorTertiary"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/unread"
        android:layout_width="20dp"
        android:layout_height="16sp"
        android:paddingStart="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:src="@drawable/circle"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtLastMessage"
        tools:tint="@color/tools_theme"
        tools:visibility="visible" />

    <com.sms.moLotus.common.widget.QkTextView
        android:id="@+id/txtDate"
        style="@style/TextTertiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/txtUserName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="100"
        tools:text="Oct 11" />

</androidx.constraintlayout.widget.ConstraintLayout>